<div class="home">

  {{> navbar}}

</div>

<div class="container card" id="content">
  <h3 class="card-title text-center font-weight-bold">Account Management Page</h3>

  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      {{!-- username --}}
      <div class="form-group row">
        <label for="dab" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
          <input id="dab" name="name" type="text" class="form-control" placeholder="shows in your posts and activity">
        </div>
      </div>
      {{!-- full name --}}
      <div class="form-group row">
        <label for="dab1" class="col-sm-2 col-form-label">Full Name:</label>
        <div class="col-sm-10">
          <input id="dab1" name="name" type="text" class="form-control" placeholder="not shown publicly"></input>
        </div>
      </div>
      {{!-- user bio --}}
      <div class="form-group row">
        <label for="dab1" class="col-sm-2 col-form-label">A little bit about yourself:</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="dab1" rows="3"></textarea>
        </div>
      </div>
      {{!-- upload photo --}}
     <div class="row">
        <label for="photo" class="col-sm-2 col-form-label">Picture:</label>
        <div class="col-sm-10">
          <input type="file" name="productImage">
        </div>
      </div>
      {{!-- areas of interest category --}}
      <div class="form-group row">
        <label for="dab4" class="col-sm-2 col-form-label">Select a few areas of interest:</label>
        <div class="col-sm-10">
          <select name="Category" id="departmentCategory" class="form-control input-lg">
            <option value="">Category</option>
          </select>
        </div>
      </div>
      {{!-- submit post --}}
      <button class="button-submit btn-primary" type="submit" id="account-info">Submit</button>
      <a href="/">Return To Home</a>
      <button class="button-submit btn-danger" id="delete-account">Delete my account</button>
    </div>
</div>
</form>

<script type="text/javascript" src="/js/accountSetup.js"></script>

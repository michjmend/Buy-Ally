<div class="container card" id="content">
  <h3 class="card-title">Add a POST</h3>

  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      {{!-- item name --}}
      <div class="form-group row">
        <label for="dab" class="col-sm-2 col-form-label">Item Description:</label>
        <div class="col-sm-10">
          <input id="dab" name="name" type="text" class="form-control"
            placeholder="What kind of item are you reviewing about?">
        </div>
      </div>
      {{!-- review post --}}
      <div class="form-group row">
        <label for="dab1" class="col-sm-2 col-form-label">Review:</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="dab1" rows="3"></textarea>
        </div>
      </div>
      {{!-- dollar amount spent --}}
      <div class="form-group row">
        <label for="dab2" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
          <input id="dab2" name="name" type="text" class="form-control" placeholder="$$$">
        </div>
      </div>
      {{!-- upload photo --}}
      <div class="form-group row">
        <label for="dab3" class="col-sm-2 col-form-label">Photo:</label>
        <div class="col-sm-10">
          <div class="input-group mb-3">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="inputGroupFile02">
              <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Choose
                file</label>
            </div>
            <div class="input-group-append">
              <span class="input-group-text" id="inputGroupFileAddon02">Upload</span>
            </div>
          </div>
        </div>
      </div>
      {{!-- site in which user bought item --}}
      <div class="form-group row">
        <label for="dab4" class="col-sm-2 col-form-label">URL:</label>
        <div class="col-sm-10">
          <input id="dab4" name="url" type="text" class="form-control" placeholder="site">
        </div>
      </div>
      {{!-- department category --}}
      <div class="form-group row">
        <label for="dab4" class="col-sm-2 col-form-label">Select Category:</label>
        <div class="col-sm-10">
          <select name="Category" id="departmentCategory" class="form-control input-lg">
            <option value="">Department</option>
          </select>
        </div>
      </div>
      {{!-- submit post --}}
      <button class="btn btn-primary" type="submit">Submit</button> <a href="/">‚Üê Back To Home</a>
    </div>
</div>
</form>



<script>
  /* Set the width of the sidebar to 250px and the left margin of the page content to 250px */
  function openNav() {
    document.getElementById("mySidebar").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px";
  }

  /* Set the width of the sidebar to 0 and the left margin of the page content to 0 */
  function closeNav() {
    document.getElementById("mySidebar").style.width = "0";
    document.getElementById("main").style.marginLeft = "0";
  }

  $(document).ready(function () {
    function load_json_data(id) {
      var filter = '';
      $.getJSON(Category.json, function (data) {
        filter += '<option value="">Select ' + id + '</option>';
        $.each(data, function (key, value) {
          filter += '<option value="">Select ' + id + '> ' + value.categoryname + '</option>';
        });
        $('#Category').html(filter);

      });
    }
  });
</script>
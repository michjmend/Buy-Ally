<div class="home">

	{{> navbar}}

</div>

<div class="container card" id="content">
  <h3 class="card-title">Add a POST</h3>

  <form class="create-update-form" id="newPost" enctype="multipart/form-data">
    {{!-- <div class="form-group"> --}}
      {{!-- item name --}}
      <div class="form-group row">
        <label for="dab" class="col-sm-2 col-form-label">Item Description:</label>
        <div class="col-sm-10">
          <input id="item" name="name" type="text" class="form-control"
            placeholder="What would you like to review today?">
        </div>
      </div>
      {{!-- review post --}}
      <div class="form-group row">
        <label for="reviews" class="col-sm-2 col-form-label">Review:</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="review" id="reviews" rows="3"></textarea>
        </div>
      </div>
      {{!-- dollar amount spent --}}
      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
          <input id="price" name="price" type="text" class="form-control" placeholder="$$$">
        </div>
      </div>
      {{!-- photo if item --}}
      <div class="row">
        <label for="brand" class="col-sm-2 col-form-label">Picture:</label>
        <div class="col-sm-10">
          <input type="file" name="productImage">
        </div>
      </div>
      {{!-- brand of bought item --}}
      <div class="form-group row">
        <label for="brand" class="col-sm-2 col-form-label">Brand:</label>
        <div class="col-sm-10">
          <input id="brand" name="brand" type="text" class="form-control" placeholder="brand">
        </div>
      </div>
      {{!-- site in which user bought item --}}
      <div class="form-group row">
        <label for="url" class="col-sm-2 col-form-label">URL:</label>
        <div class="col-sm-10">
          <input id="url" name="url" type="url" class="form-control" placeholder="site">
        </div>
      </div>
      {{!-- department category --}}
      <div class="form-group row">
        <label for="departmentCategory" class="col-sm-2 col-form-label">Select Category:</label>
        <div class="col-sm-10">
          <select name="Category" id="departmentCategories" class="form-control input-lg">
            <option value="">Category</option>
          </select>
        </div>
      </div>
      {{!-- submit post --}}
      <button class="btn-submit btn-primary" type="submit">Submit</button><a href="/">‚Üê Back To Home</a>
  </form>
</div>
<script src="/js/categoryGetter.js"></script>
<script src="/js/postblock.js"></script>
